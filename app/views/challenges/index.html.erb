<div class="w-full h-full max-w-screen-2xl mx-auto relative text-slate-800">
  <div class="wrapper w-full h-full absolute top-0 z-30 relative">
    <header class="flex items-center justify-between px-16 py-6 font-semibold border-b border-slate-800 relative z-20">
      <nav class="w-1/4">
        <ul class="flex items-center justify-between">
          <li>
            <%= link_to 'Challenges', challenges_path %>
          </li>
          <li>
            <a href="#">Rules</a>
          </li>
          <li>
            <a href="#">Jury</a>
          </li>
        </ul>
      </nav>
      <div class="w-1/4 flex items-center justify-center">
         <%= link_to home_path do %>
				   <%= image_tag("challange/logo_dark.png") %>
        <% end %>
      </div>
      <div class="w-1/5 flex items-center justify-between">
        <div class="w-5 h-5">
          <%= image_tag("challange/facebook.png") %>
        </div>
        <div class="w-5 h-5">
          <%= image_tag("challange/instagram.png") %>
        </div>
        <button class="w-48 px-3 py-2 border border-slate-800 font-bold">Log in</button>
      </div>
    </header>
    <section class="w-full max-w-xl h-screen px-16 mt-44 relative z-20">
      <div class="w-full max-w-screen-2xl mx-auto flex justify-between px-7 md:px-24 mt-8">
        <div class="w-80 hidden h-full max-h-min bg-white lg:rounded-lg py-4 px-7 text-zinc-500 lg:block">

         	<h4 class="text-lg text-gray-800">
            <%= t('All Challanges') %>
          </h4>
          
          <%- Challenge.statuses.select {|st| st != 'archived'}.keys.each do |status| %>
            <div class="mt-3 cursor-pointer">
              <div class="flex justify-between">
                <div class="flex items-center">
                  <br><%= radio_button_tag 'category', status, @status == status,
                  class: "w-2.5 h-2.5 appearance-none bg-white ring-1 ring-offset-2 ring-gray-400 focus:outline-0 checked:bg-yellow-500 bg-none",
                  style: "color:#facc15 ; background-image: none; border: none; border-radius: 50%;", id: status %>
                  <label class="ml-3 cursor-pointer" for="<%= status %>">
                    <%= status %>
                  </label>
                </div>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    </section>
  </div>
</div>
